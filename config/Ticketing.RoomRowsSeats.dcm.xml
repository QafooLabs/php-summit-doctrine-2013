<?xml version="1.0" encoding="utf-8"?>
<doctrine-mapping xmlns="http://doctrine-project.org/schemas/orm/doctrine-mapping" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://doctrine-project.org/schemas/orm/doctrine-mapping http://doctrine-project.org/schemas/orm/doctrine-mapping.xsd">
  <entity name="Ticketing\RoomRowsSeats" table="room_rows_seats">
    <indexes>
      <index name="row_id" columns="row_id"/>
    </indexes>
    <id name="id" type="integer" column="id">
      <generator strategy="IDENTITY"/>
    </id>
    <field name="seatNumber" type="string" column="seat_number" length="10" nullable="true"/>
    <field name="category" type="string" column="category" length="10" nullable="true"/>
    <field name="price" type="decimal" column="price" precision="10" scale="2" nullable="true"/>
    <many-to-one field="row" target-entity="Ticketing\RoomRows">
      <join-columns>
        <join-column name="row_id" referenced-column-name="id"/>
      </join-columns>
    </many-to-one>
  </entity>
</doctrine-mapping>
